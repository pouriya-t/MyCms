@using MyCms.Classes
@model IEnumerable<Data.Models.Page>
@{
    ViewBag.Title = "Index";
}


<!-- last news -->
<section class="last-news-section border-radius margin-top-60">
    <header><i class="icons icon-doc-2"></i>  <h3>تعداد @Model.Count()  با عبارت @ViewBag.Name یافت شد</h3> </header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="/PageImages/@item.ImageName" style="max-height:100px;">
                <h2> <a href="/News/@item.PageId"> @item.Title </a></h2>
                <p>
                    @item.ShortDescription
                </p>
                <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreateDate.ToShamsi() </span>
                <a href="/News/@item.PageId" class="more-link"><i class="icons icon-more"></i></a>
            </li>
        }
    </ul>
</section>
<!-- End last news -->
